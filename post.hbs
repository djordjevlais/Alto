{{!< default}}

<div class="content-area">
    <main class="site-main">
        {{#post}}
            <article class="{{post_class}}{{#unless feature_image}} no-image{{/unless}} single-post">
                {{> post-header single=true number_date=true big_title=true}}
                {{> post-media ratio="horizontal" with_caption=true}}
                <div class="post-content kg-canvas u-text-format">
                    {{content}}
                </div>
                <div class="container medium">
                    {{#if @custom.show_share_links}}
                        {{> share}}
                    {{/if}}
                    {{#if @custom.show_author}}
                        {{> author}}
                    {{/if}}
                </div>
            </article>
            {{> post-navigation}}
            {{#if @custom.show_related_posts}}
                {{> related}}
            {{/if}}
            {{> comment}}
        {{/post}}
    </main>
    <div id="disqus_thread"></div>
<script>
    var disqus_config = function () {
        this.page.url = "{{url absolute="true"}}";
        this.page.identifier = "ghost-{{comment_id}}"
    };
    (function() {
    var d = document, s = d.createElement('script');
    s.src = 'https://borko.disqus.com/embed.js';
    s.setAttribute('data-timestamp', +new Date());
    (d.head || d.body).appendChild(s);
    })();
</script>
</div>